{
  "manifest_version": 3,
  "name": "Darija Translator",
  "version": "1.2",
  "description": "English â†” Moroccan Darija AI Translator with Voice",

  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },

  "permissions": [
    "sidePanel",
    "storage",
    "activeTab",
    "scripting",
    "audioCapture"
  ],

  "host_permissions": [
    "http://localhost:8080/*"
  ],

  "action": {
    "default_title": "Open Darija Translator",
    "default_icon": "icon.png"
  },

  "side_panel": {
    "default_path": "sidepanel.html"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
